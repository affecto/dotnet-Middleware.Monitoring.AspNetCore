<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>Affecto.Middleware.Monitoring.AspNetCore</AssemblyName>
    <RootNamespace>Affecto.Middleware.Monitoring.AspNetCore</RootNamespace>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Description>Middleware for implementing monitoring endpoints in ASP.NET Web Api.</Description>
    <Company>Affecto</Company>
    <Version>3.0.0</Version>
    <AssemblyVersion>3.0.0.0</AssemblyVersion>
    <FileVersion>3.0.0.0</FileVersion>
    <Authors>Affecto</Authors>
    <PackageProjectUrl>https://github.com/affecto/dotnet-Middleware.Monitoring.AspNetCore</PackageProjectUrl>
    <PackageTags>affecto monitoring monitor middleware aspnet core</PackageTags>
    <PackageReleaseNotes>Separated shallow and deep monitoring middlewares. Inject health check service factory into the Invoke method to use correct lifetime scope for the service.</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Http" Version="2.1.1" />
  </ItemGroup>

</Project>
